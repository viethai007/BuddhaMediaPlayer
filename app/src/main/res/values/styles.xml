<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <style name="general_text">
        <item name="android:textSize">@dimen/general_text</item>
        <item name="android:textColor">@color/foreground</item>
    </style>


    <style name="track_title_text">
        <item name="android:textSize">@dimen/track_title_text</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="track_artist_text">
        <item name="android:textSize">@dimen/track_artist_text</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="general_button">
        <item name="android:paddingTop">@dimen/button_padding_tb</item>
        <item name="android:paddingBottom">@dimen/button_padding_tb</item>
        <item name="android:paddingLeft">@dimen/button_padding_lr</item>
        <item name="android:paddingRight">@dimen/button_padding_lr</item>
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="general_tab">
        <item name="android:paddingTop">@dimen/tab_padding_t</item>
        <item name="android:paddingBottom">@dimen/tab_padding_b</item>
        <item name="android:paddingLeft">@dimen/tab_padding_lr</item>
        <item name="android:paddingRight">@dimen/tab_padding_lr</item>
        <item name="android:background">@color/background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/tab_text</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="general_tab.selected" parent="general_tab">
        <item name="android:background">@drawable/tab_indicator_selected</item>
    </style>

    <style name="menu_button">
        <item name="android:paddingTop">@dimen/menu_padding_tb</item>
        <item name="android:paddingBottom">@dimen/menu_padding_tb</item>
        <item name="android:paddingLeft">@dimen/menu_padding_lr</item>
        <item name="android:paddingRight">@dimen/menu_padding_lr</item>
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/menu_text</item>
        <item name="android:textColor">@color/foreground</item>
    </style>


    <style name="horizontal_spectator">
        <item name="android:layout_width">@dimen/spectator_thick</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/spectator</item>
    </style>

    <style name="vertical_spectator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spectator_thick</item>
        <item name="android:background">@color/spectator</item>
    </style>

    <style name="horizontal_spectator_alternative">
        <item name="android:layout_width">@dimen/spectator_thick</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/spectator_alternative</item>
    </style>

    <style name="vertical_spectator_alternative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spectator_thick</item>
        <item name="android:background">@color/spectator_alternative</item>
    </style>
</resources>
